<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>

            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>
            <% if (message.length> 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= message %>
                </div>
                <% } %>
                    <table class="table">
                        <thead>
                            <tr class="table-info">
                                <th scope="col">#</th>
                                <th scope="col">Nama</th>
                                <th scope="col">No HP</th>
                                <th scope="col">Info</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (contacts.length < 1) { %>
                                <tr>
                                    <td colspan="4">
                                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                                            <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:">
                                                <use xlink:href="#exclamation-triangle-fill" />
                                            </svg>
                                            <div class="fw-bold">
                                                Contact tidak ditemukan!
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                                <% } %>
                                    <% contacts.forEach((contact,index)=> { index++ %>
                                        <tr class="table-danger">
                                            <th scope="row">
                                                <%= index %>
                                            </th>
                                            <td>
                                                <%= contact.nama %>
                                            </td>
                                            <td>
                                                <%= contact.noHP %>
                                            </td>
                                            <td>
                                                <a href="/contact/<%= contact.nama %> "
                                                    class="btn btn-success badge rounded-pill"> <i
                                                        class="bi bi-info-circle-fill"></i> Detail</a>
                                            </td>
                                        </tr>
                                        <% }) %>



                        </tbody>
                    </table>

        </div>
    </div>
</div>